<html>
	<% stylesheet_link_tag "style.css" %>
<div class="main_body">
	<h1>Sign Up</h1>
	<%= form_for @user do |f| %>
	  <% if @user.errors.any? %>
	    <div class="error_messages">
	      <h2>Form is invalid</h2>
	      <ul>
	        <% for message in @user.errors.full_messages %>
	          <li><%= message %></li>
	        <% end %>
	      </ul>
	    </div>
	  <% end %>
	 <div id="textbox">
	  <p>
	    <%= f.label :user_name %><br />
	    <%= f.text_field :name %>
	  </p>
	  <p>
	    <%= f.label :Tel %><br />
	    <%= f.number_field :phone %>
	  </p>
	  <p>
	    <%= f.label :email %><br />
	    <%= f.text_field :email %>
	  </p>
	  <p>
	    <%= f.label :password %><br />
	    <%= f.password_field :password %>
	  </p>
	  <p>
	    <%= f.label :password_confirmation %><br />
	    <%= f.password_field :password_confirmation %>
	  </p>

	 </div>
	  <p class="button input"><%= f.submit "Sign up" %></p>
	 
	<% end %>
</div>
</html>







